{% extends 'base.html.twig' %}

{% block title %}Hello CursoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tabla de cursos ✅</h1>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Nivel</th>
            <th>Idioma</th>
            <th>Nº Alumnos</th>
        </tr>
        {% for curso in cursos %}
        <tr>
            <td>{{ curso.nombre }}</td>
            <td>{{ curso.nivel }}</td>
            <td>{{ curso.idioma }}</td>
            <td>{{ curso.alumnos|length}}</td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
